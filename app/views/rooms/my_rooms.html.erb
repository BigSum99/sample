<div class="my_rooms-page">
  <div class="container">
    <h2>自分の施設一覧</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>画像</th>
          <th>施設名</th>
          <th>紹介文</th>
          <th>価格/泊</th>
          <th>作成日</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @rooms.each do |room| %>
          <tr>
            <td>
              <% if room.room_image.attached? %>
                <%= image_tag room.room_image, class: "img-fluid", width: "100" %>
              <% else %>
                <%= image_tag 'default_room.png', class: "img-fluid", width: "100" %>
              <% end %>
            </td>
            <td>
              <%= link_to room.room_name, room_path(room) %>
            </td>
            <td><%= truncate(room.description, length: 50) %></td>
            <td>¥<%= room.price_per_night %></td>
            <td><%= room.created_at.strftime("%Y/%m/%d") %></td>
            <td class="text-end">
              <div class="dropdown">
                <a class="btn btn-link dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                  <%= image_tag 'three-dot.svg', width: "15", height: "15" %>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuLink">
                  <li><%= link_to '編集', edit_room_path(room), class: 'dropdown-item' %></li>
                  <li><%= link_to '削除', room, method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'dropdown-item' %></li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
