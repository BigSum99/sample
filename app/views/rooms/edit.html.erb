<div class="room-new-page">
  <h2 class="text-center mt-5">施設編集</h2>

  <div class="d-flex justify-content-center">
    <div class="p-4" style="max-width: 650px; width: 100%;">
      <%= form_with model: @room, local: true do |f| %>

        <div class="form-group mb-4">
          <%= f.label :room_name, "施設名" %>
          <%= f.text_field :room_name, autofocus: true, class: "form-control" %>
          <% if @room.errors[:room_name].any? %>
            <% @room.errors.full_messages_for(:room_name).each do |msg| %>
              <div class="error-message"><%= msg %></div>
            <% end %>
          <% end %>
        </div>

        <div class="form-group mb-4">
          <%= f.label :description, "施設詳細" %>
          <%= f.text_area :description, class: "form-control" %>
          <% if @room.errors[:description].any? %>
            <% @room.errors.full_messages_for(:description).each do |msg| %>
              <div class="error-message"><%= msg %></div>
            <% end %>
          <% end %>
        </div>

        <div class="form-group mb-4">
          <%= f.label :price_per_night, "料金" %>
          <%= f.number_field :price_per_night,step: 1, min: 1, class: "form-control" %>
          <% if @room.errors[:price_per_night].any? %>
            <% @room.errors.full_messages_for(:price_per_night).each do |msg| %>
              <div class="error-message"><%= msg %></div>
            <% end %>
          <% end %>
        </div>

        <div class="form-group mb-4">
          <%= f.label :address, "住所" %>
          <%= f.text_field :address, class: "form-control" %>
          <% if @room.errors[:address].any? %>
            <% @room.errors.full_messages_for(:address).each do |msg| %>
              <div class="error-message"><%= msg %></div>
            <% end %>
          <% end %>
        </div>

        <div class="form-group mb-4">
          <%= f.label :room_image, "画像" %>
          <%= f.file_field :room_image, class: "form-control" %>
          <% if @room.room_image.attached? %>
            <div class="mt-3">
              <%= image_tag @room.room_image, class: 'img-fluid rounded', width: "100" %>
            </div>
          <% end %>
        </div>

        <div class="form-group text-center mb-4">
          <%= f.submit "施設編集", class: "btn btn-dark btn-block mt-3" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= link_to "キャンセル", room_path(@room), class: "btn btn-cancel btn-block mt-3" %>
      </div>
    </div>
  </div>
</div>
