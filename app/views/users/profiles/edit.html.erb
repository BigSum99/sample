<div class="profile-edit-page">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-10">
        <div class="card">
          <div class="card-header">
            <h2>プロフィールを編集</h2>
          </div>
          <div class="card-body">
            <%= form_for(@user, url: users_profile_path, method: :patch, html: { multipart: true }) do |f| %>
              <div class="form-group mb-3">
                <%= f.label :username, "ユーザー名", class: "form-label" %>
                <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-person"></i></span>
                  <%= f.text_field :username, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group mb-3">
                <%= f.label :introduction, "自己紹介", class: "form-label" %>
                <%= f.text_area :introduction, class: 'form-control', rows: 4 %>
              </div>

              <div class="form-group mb-3">
                <%= f.label :profile_image, "プロフィール画像", class: "form-label" %>
                <%= f.file_field :profile_image, class: 'form-control' %>
                <% if @user.profile_image.attached? %>
                  <div class="mt-3">
                    <%= image_tag @user.profile_image, class: 'img-fluid rounded-circle', width: "100" %>
                  </div>
                <% end %>
              </div>

              <div class="form-group">
                <%= f.submit '更新', class: 'btn btn-dark w-100' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
