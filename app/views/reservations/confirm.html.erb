<div class="reservation-confirm-page">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-10">
        <div class="card">
          <div class="card-header text-center">
            <h2>予約内容確認</h2>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <strong>チェックイン:</strong> <%= @reservation.start_date.strftime("%Y-%m-%d") %>
            </div>
            <div class="mb-3">
              <strong>チェックアウト:</strong> <%= @reservation.end_date.strftime("%Y-%m-%d") %>
            </div>
            <div class="mb-3">
              <strong>宿泊日数:</strong> <%= (@reservation.end_date - @reservation.start_date).to_i %>泊
            </div>
            <div class="mb-3">
              <strong>人数:</strong> <%= @reservation.people %>人
            </div>
            <div class="mb-3">
              <strong>支払い金額:</strong> ¥<%= @reservation.sum_price %>
            </div>

            <div class="d-flex justify-content-center mt-4">
              <%= link_to '予約を確定する', reservations_complete_path, method: :post, class: 'btn btn-dark me-2' %>
              <%= link_to '戻る', room_path(@room), class: 'btn btn-secondary' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
