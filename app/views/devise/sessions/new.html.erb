<div class="login-page">
  <h2 class="text-center mt-5">ログイン</h2>

  <div class="d-flex justify-content-center">
    <div class="p-4" style="max-width: 650px; width: 100%;">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :email, "メールアドレス", class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード", class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <div class="form-group text-center">
          <%= f.submit "ログイン", class: "btn btn-dark btn-block mt-3" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= link_to "新しいアカウントを作成", new_user_registration_path, class: "btn btn-link" %>
      </div>
    </div>
  </div>
</div>