<div class="account-page">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-10">
        <ul class="nav nav-tabs mb-3">
          <li class="nav-item">
            <%= link_to 'アカウント', user_account_path, class: 'nav-link active' %>
          </li>
          <li class="nav-item">
            <%= link_to 'プロフィール', users_profile_path, class: 'nav-link' %>
          </li>
        </ul>
        <div class="card">
          <div class="card-header">
            <h2>アカウント詳細</h2>
          </div>
          <div class="card-body">
            <div class="account-details">
              <div class="row mb-3">
                <div class="col-sm-3 text-end">
                  メールアドレス:
                </div>
                <div class="col-sm-9">
                  <%= current_user.email %>
                </div>
              </div>
              <div class="row mb-3">
                <div class="col-sm-3 text-end">
                  パスワード:
                </div>
                <div class="col-sm-9">
                  ********
                </div>
              </div>
            </div>
            <div class="d-flex justify-content-end">
              <%= link_to '編集', edit_user_registration_path, class: 'btn btn-dark' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
