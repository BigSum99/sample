<div class="registration-page">
  <h2 class="text-center mt-5">新規登録</h2>

  <div class="d-flex justify-content-center">
    <div class="p-4" style="max-width: 650px; width: 100%;">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" }) do |f| %>

        <div class="form-group mb-4">
          <%= f.label :username, "ユーザー名" %>
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
          <% if resource.errors[:username].any? %>
            <% resource.errors.full_messages_for(:username).each do |msg| %>
              <div class="error-message"><%= msg %></div>
            <% end %>
          <% end %>
        </div>

        <div class="form-group mb-4">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          <% if resource.errors[:email].any? %>
            <% resource.errors.full_messages_for(:email).each do |msg| %>
              <div class="error-message"><%= msg %></div>
            <% end %>
          <% end %>
        </div>

        <div class="form-group mb-4">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <% if resource.errors[:password].any? %>
            <% resource.errors.full_messages_for(:password).each do |msg| %>
              <div class="error-message"><%= msg %></div>
            <% end %>
          <% end %>
        </div>

        <div class="form-group mb-4">
          <%= f.label :password_confirmation, "パスワード（確認用）" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          <% if resource.errors[:password_confirmation].any? %>
            <% resource.errors.full_messages_for(:password_confirmation).each do |msg| %>
              <div class="error-message"><%= msg %></div>
            <% end %>
          <% end %>
        </div>

        <div class="form-group text-center mb-4">
          <%= f.submit "新規登録", class: "btn btn-dark btn-block mt-3" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= link_to "アカウントをお持ちの方はこちら", new_user_session_path, class: "btn btn-link" %>
      </div>
    </div>
  </div>
</div>